generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique
  name      String
  password  String
  createdAt DateTime       @default(now())
  orders    OrderService[]
}

model OrderService {
  id          Int             @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime        @default(now())
  userId      Int
  user        User            @relation(fields: [userId], references: [id])
  checklist   ChecklistItem[]
  photos      Photo[]
}

model ChecklistItem {
  id      Int          @id @default(autoincrement())
  label   String
  checked Boolean      @default(false)
  orderId Int
  order   OrderService @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Photo {
  id        Int          @id @default(autoincrement())
  url       String
  orderId   Int
  order     OrderService @relation(fields: [orderId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
}
